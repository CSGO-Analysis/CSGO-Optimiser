<Window x:Class="CSGO_Optimiser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="620" Width="900" MinHeight="620" MinWidth="900">
    <Grid>
        <TabControl x:Name="mainTabControl" Margin="5" SelectionChanged="mainTabControl_SelectionChanged">
            <TabItem>
                <TabItem.Header>
                    <Label Content="Optimisation" />
                </TabItem.Header>
                <UserControl x:Name="optimisationUserControl"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Label Content="Backup" />
                </TabItem.Header>
                <UserControl x:Name="backupUserControl"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Label Content="About" />
                </TabItem.Header>
                <UserControl x:Name="aboutUserControl"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
